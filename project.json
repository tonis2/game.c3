{
	"langrev": "1",
	"warnings": ["no-unused"],
	"authors": [],
	"version": "0.1.0",
	"dependency-search-paths": [ "./dependencies"],
	"dependencies": ["c3w", "vk", "collision", "gltf", "image"],
	"features": ["WAYLAND", "ECS_EXTRA"],
	"sources": ["./dependencies/ecs.c3", "./helpers/camera.c3", "./helpers/context.c3"],
	"script-dir": "./",
	"targets": {
		"shaders": {
			"type": "prepare",
			"exec": [
				"slangc ./shaders/shader.slang -force-glsl-scalar-layout -fvk-use-entrypoint-name -target spirv -emit-spirv-directly -o ./shaders/shader.spv"
			]
		},
		"game": {
			"type": "executable",
			"linked-libraries": ["vulkan"],
			"sources": ["./main.c3"]
		},
		"game-win": {
			"target": "windows-x64",
			"winsdk": "/home/tonis/.xwin/lib",
			"linker-search-paths": ["./libs/windows"],
			"linked-libraries": ["vulkan-1"],
			"type": "executable",
			"sources": ["./main.c3"]
		}
	},
	"output": "./build"
}